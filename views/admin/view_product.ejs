
<%- include('include/head') %>
    <title>View Products</title>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <%- include('include/sidebar') %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3  text-dark" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">View Products</h2>
                </div>
            </nav>
           
            <!-- BODY CONTENTs -->
            <table class="table table-hover text-center bg-white">
                <thead class="table-dark ">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Product Price</th>
                        <th scope="col">Product Category</th>
                        <th scope="col">Product Stocks</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%- item.id %></td>
                        <td><%- item.product_name %></td>
                        <td><%- item.product_price %></td>
                        <td><%- item.product_category %></td>
                        <td><%- item.product_stock %></td>
                        <td>
                            <form action="/admin/inventory/<%- item.id %>/archive" method="POST">
                                <button  class="btn btn-danger"><i class="bi bi-archive-fill pe-1 fa-2xs"></i>Archive</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
                </table>
           
            <!-- BODY CONTENT -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>



