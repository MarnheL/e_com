
    
<%- include('include/head') %>
<title>Shipping fee</title>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
</head>
<body>
<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <%- include('include/sidebar') %>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
            <div class="d-flex align-items-center text-center ">
                <i class="fas fa-align-left primary-text fs-4 me-3 text-dark " id="menu-toggle"></i>
                <h2 class="fs-2 m-0">Shipping fee</h2>
            </div>
        </nav>

        <div class="row my-5">
            <h3 class="fs-4 mb-3">Shipping Fee</h3>
            <div class="col">
                <table id="example" class="display table table-hover bg-white rounded text-center" style="width:100%">
                    
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center" scope="col">City/Municipality</th>
                            <th class="text-center" scope="col">Barangray</th>
                            <th class="text-center" scope="col">Shipping</th>
                            <th class="text-center" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% shippingFees.forEach(cityData => { %>
                            <% cityData.shippingFees.forEach(city => { %>
                                <tr>
                                    <td><%- city.city %></td>
                                    <td>
                                        <% city.barangays.forEach(barangay => { %>
                                            <p><%- barangay.name %></p>
                                        <% }) %>
                                    </td>
                                    <td>
                                        <% city.barangays.forEach(barangay => { %>
                                            <p><%- barangay.fee %></p>
                                        <% }) %>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-success float-right me-1" data-bs-toggle="modal" data-bs-target="#myModal1">Increase</button>
                                            <!-- The Modal -->
                                            <div class="modal" id="myModal1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content"> 
                                                        <!-- Modal Header -->
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">Increase Shipping fee</h4>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <!-- Modal body -->
                          
                                                        <div class="modal-body" id="">
                                                            <form action="/admin/shipping-fee/add/<%- cityData.id %>" method="POST">
                                                                <input id="input" type="number" min="1" name="amount" required>
                                                                <button class="btn btn-primary" >save</button>
                                                            </form>
                                                                <!-- Modal footer -->
                                                            <!-- <div class="modal-footer"> 
                                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                                            </div> -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- End of Modal -->
                                            <!-- /#page-content-wrapper -->
                                

                                        <button type="button" class="btn btn-danger float-right me-1" data-bs-toggle="modal" data-bs-target="#myModal">Decrease</button>
                                            <!-- The Modal -->
                                            <div class="modal" id="myModal">
                                                <div class="modal-dialog">
                                                    <div class="modal-content"> 
                                                        <!-- Modal Header -->
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">Decrease Shipping fee</h4>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <!-- Modal body -->
                          
                                                        <div class="modal-body" id="">
                                                            <form action="/admin/shipping-fee/sub/<%- cityData.id %>" method="POST">
                                                                <input id="input" type="number" min="1" name="amount" required>
                                                                <button  class="btn btn-primary">save</button>
                                                            </form>
                                                                <!-- Modal footer -->
                                                            <!-- <div class="modal-footer"> 
                                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                                            </div> -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <!-- <p>Increase Shipping Fee</p>
                                        <form action="/admin/shipping-fee/add/<%- cityData.id %>" method="POST">
                                            <input type="number" min="1" name="amount" required>
                                            <button>save</button>
                                        </form> -->


                                        <!-- <p>Decrease Shipping Fee</p>
                                        <form action="/admin/shipping-fee/sub/<%- cityData.id %>" method="POST">
                                            <input type="number" min="1" name="amount" required>
                                            <button>save</button>
                                        </form> -->
                                    </td>
                                </tr>
                            <% }) %>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
<!-- /#page-content-wrapper -->
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/admin.js"></script>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script>
    $('#example').DataTable({
        
      
        responsive: true,
        "pageLength": 1,
        "ordering": false,
        
    });
      
</script>
</body>

</html>