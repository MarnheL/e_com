
    
<%- include('include/head') %>
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <%- include('include/sidebar') %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center text-center ">
                    <i class="fas fa-align-left primary-text fs-4 me-3 text-dark " id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Dashboard</h2>
                </div>
            </nav>

            <div class="container-fluid px-4">
                <div class="row g-3 my-2">
                    <div class="row g-3 my-2">
                               <div class="card text-bg-primary me-3 " style="max-width: 18rem;">
                                    <div class="card-body text-success">
                                        <h5 class="card-title text-white"><i class="bi bi-house-fill pe-1"></i>Inventory</h5>
                                        </div>
                                        <div class="card-footer bg-transparent border-white">
                                            <a href="/admin/dashboard" class="text-decoration-none text-white"> View details </a>
                                        </div>
                                </div>

                                <div class="card text-bg-success  me-3" style="max-width: 18rem;">
                                    <div class="card-body text-success">
                                    <h5 class="card-title text-white"><i class="bi bi-person-fill pe-1"></i>Customers</h5>
                                    </div>
                                    <div class="card-footer bg-transparent border-white " >
                                        <a href="/admin/dashboard/accounts" class="text-decoration-none text-white"> View details </a>
                                    </div>
                                </div>
                            
                                <div class="col-xl-6 col-md-12 postion-relative"style="max-width: 28rem;">
                                    <div class="card bg-dark ">
                                        <div class="card-body  pb-3">
                                            <div class="d-flex justify-content-between p-md-1 ">
                                                <div class="d-flex flex-row">
                                                    <div>
                                                        <h4 class="text-white">Total Sales</h4>
                                                        <p class="mb-0 text-white" >Sales</p>
                                                    </div>
                                                </div>
                                                <div class="align-self-center">
                                                    <h2 class="h1 mb-0 text-white" ><%= total_sales.toLocaleString(undefined, { style: 'currency', currency: 'PHP' }) %></h2>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    </div>
                </div>
            </div>
            <div class="row my-5">
                <h3 class="fs-4 mb-3">Inventory</h3>
                <div class="col">
                    <table id="example" class="display table table-hover bg-white rounded text-center" style="width:100%">
                        
                        <thead class="table-dark">
                            <tr>
                                <th class="text-center" scope="col" width="50">ID</th>
                                <th class="text-center" scope="col">Product Image</th>
                                <th class="text-center" scope="col">Product Name</th>
                                <th class="text-center" scope="col">Available Stocks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% product.forEach(data => { %>
                                <tr>
                                    <td><%- data.id %></td>
                                    <td>
                                        <img src="<%- data.img_name %>" alt="" style="width: 50px; height: 50px;">
                                    </td>
                                    <td><%- data.product_name %></td>
                                    <td><%- data.product_stock %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script>
        $('#example').DataTable({
            order: [[3, 'desc']],
            "ordering": false
        });
    </script>
</body>

</html>