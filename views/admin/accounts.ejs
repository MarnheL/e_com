
<%- include('include/head') %>
    <title>Accounts</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <%- include('include/sidebar') %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3  text-dark" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Admin 1</h2>
                </div>

               
            </nav>
            <!-- BODY CONTENTs -->
            <!-- TABLE LABEL -->
            <div class="d-flex align-items-right">
                <h2 class="fs-3 m-3">Customer Details</h2>
            </div>
            <!-- TABLE WITH USERS DATA -->
            <div class="navbar-nav navbar-dark position-relative mt-5">
                <table id="example" class="display table table-hover bg-white rounded text-center" style="width:100%">
                    <thead class="table-dark">
                      <tr>
                        <th class="text-center"  scope="col">Name</th>
                        <th class="text-center"  scope="col">Number</th>
                        <th class="text-center"  scope="col">Email</th>
                        <th class="text-center"  scope="col">Address</th>
                        <!-- <th scope="col">Action</th> -->
                      </tr>
                    </thead>
                    <tbody>
                        <% account.forEach(data => { %>
                            <tr>
                                <td><%- data.firstname %> <%- data.middlename %> <%- data.lastname %></td>
                                <td><%- data.contact_number %></td>
                                <td><%- data.email %></td>
                                <td><%- data.house_no %> <%- data.zip_code %> <%- data.barangay %> <%- data.city %> <%- data.province %></td>
                               <!-- <td>
                                    <a href="/admin/accounts/<%- data.id %>"></a>
                                    <a class="text-decoration-none btn btn-danger" href="/admin/accounts/<%- data.id %>/delete">Delete</a>
                                </td>-->
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    <!-- /#page-content-wrapper -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script>
        $('#example').DataTable({
    order: [[3, 'desc']]
});
    </script>
</body>

</html>